{
  "name": "nextjs-node-loader",
  "version": "1.1.6",
  "description": "Allows you to include native Node.js `.node` modules in your Next.js project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eisberg-labs/nextjs-node-loader.git"
  },
  "author": "Ana Bujan <ana@eisberg-labs.com>",
  "homepage": "https://github.com/eisberg-labs/nextjs-node-loader",
  "bugs": "https://github.com/eisberg-labs/nextjs-node-loader/issues",
  "main": "dist/cjs.js",
  "engines": {
    "node": ">= 10.13.0"
  },
  "scripts": {
    "start": "npm run build -- -w",
    "build": "cross-env NODE_ENV=production babel src -d dist --copy-files",
    "security": "npm audit --production",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "npm i --prefix examples/next-14 && npm run build --prefix examples/next-14",
    "prepare": "npm run build"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "loader-utils": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.7",
    "@babel/core": "^7.25.7",
    "@babel/preset-env": "^7.25.7",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@types/jest": "^29.5.13",
    "@webpack-contrib/eslint-config-webpack": "^3.0.0",
    "babel-jest": "^29.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fs-extra": "^11.2.0",
    "jest": "^29.0.0",
    "memfs": "^4.13.0",
    "prettier": "^3.3.3",
    "webpack": "^5.85.0"
  },
  "keywords": [
    "webpack",
    "nextjs",
    "loader",
    "node.js",
    "node-loader",
    "native-modules"
  ]
}
